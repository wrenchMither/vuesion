{
  "compilerOptions": {
    "target": "es2018",
    "module": "esnext",
    "moduleResolution": "node",
    "lib": [
      "esnext",
      "esnext.asynciterable",
      "dom"
    ],
    "esModuleInterop": true,
    "allowJs": true,
    "sourceMap": true,
    "strict": true,
    "noEmit": true,
    "experimentalDecorators": true,
    "baseUrl": ".",
    "paths": {
      "~/*": [
        "src/*"
      ],
      "@/*": [
        "src/*"
      ]
    },
    "rootDirs": ["src"],
    "types": [
      "@types/node",
      "@nuxt/types",
      "@types/animejs",
      "nuxt-i18n"
    ]
  },
  "include": ["./src/**/*", "./src/**/*.vue"],
  "exclude": [
    "node_modules",
    ".nuxt",
    "dist"
  ],
  "files": ["src/vue-shim.d.ts"]
}
