{
  "compilerOptions": {
    "target": "es2018",
    "module": "esnext",
    "moduleResolution": "node",
    "lib": [
      "esnext",
      "esnext.asynciterable",
      "dom"
    ],
    "sourceMap": true,
    "emitDecoratorMetadata": true,
    "experimentalDecorators": true,
    "allowSyntheticDefaultImports": true,
    "noImplicitAny": true,
    "skipLibCheck": true,
    "baseUrl": ".",
    "paths": {
      "~/*": [
        "src/*"
      ],
      "@/*": [
        "src/*"
      ]
    },
    "rootDirs": ["src"],
    "types": [
      "@types/node",
      "@nuxt/types",
      "@types/animejs",
      "@types/lodash",
      "@types/testing-library__jest-dom",
      "nuxt-i18n",
      "jest"
    ]
  },
  "include": ["./src/**/*", "./src/**/*.vue"],
  "exclude": [
    "node_modules",
    ".nuxt",
    "dist"
  ],
  "files": ["src/vue-shim.d.ts", "src/custom-typings.d.ts", "src/plugins/vue.plugins.d.ts"]
}
